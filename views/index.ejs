<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>
<body>
     <!-- fsesegsrg -->
    <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10">
        <form action="/create" method="post">   
            <input class="block w-full px-5 py-2 rounded-md outline-none bg-zinc-700 text-white" type="text" placeholder="title" name="title">
            <textarea class="block w-full mt-2 px-5 py-2 rounded-md outline-none bg-zinc-700 resize-none text-white" placeholder="write your task" name="details"></textarea>
            <input class="mt-2 text-white bg-blue-600 rounded-md px-5 py-2 " type="submit" value="create task">
        </form> 
    </div>
    <div class="task p-10 flex gap-3 flex-wrap">    
        <% if(files.length > 0){ %>
            <% files.forEach(function(val){ %>
            
        <div class="task w-78 px-3 py-8 bg-zinc-700 rounded-md">
                <h1 class="text-white text-3xl tracking-tighter "><%= val %></h1>
            <div class="flex w-full justify-between mt-3">
                <a class="text-blue-600 inline-block" href="/file/<%= val %>">read more.</a>
                <a class="text-zinc-600" href="/edit/<%= val %>">edit filename</a>
            </div>
        </div>
            <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">no tasks yet</h3>
            <% } %>
        
         
            
        </div>
    </div>
</div>
</body>
</html>